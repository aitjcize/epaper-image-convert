{
  "name": "@aitjcize/epaper-image-convert",
  "version": "0.1.3",
  "description": "Convert images for e-paper displays with advanced tone mapping, dithering, and color palette optimization",
  "type": "module",
  "main": "./src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./palettes": "./src/palettes.js",
    "./presets": "./src/presets.js"
  },
  "bin": {
    "epaper-image-convert": "./src/cli.js"
  },
  "files": [
    "src/**/*.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "keywords": [
    "epaper",
    "e-paper",
    "eink",
    "e-ink",
    "electronic-paper",
    "image-processing",
    "dithering",
    "tone-mapping",
    "waveshare",
    "display",
    "cli",
    "color-palette",
    "floyd-steinberg"
  ],
  "author": "Wei-Ning Huang <aitjcize@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aitjcize/epaper-image-convert.git"
  },
  "bugs": {
    "url": "https://github.com/aitjcize/epaper-image-convert/issues"
  },
  "homepage": "https://github.com/aitjcize/epaper-image-convert#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "canvas": "^3.2.1",
    "commander": "^14.0.2",
    "exifreader": "^4.14.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  }
}
